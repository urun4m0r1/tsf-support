{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "WebNovelMarkupLanguage",
	"scopeName": "source.wnml",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "invalid.illegal.wnml",
					"match": "것"
				},
				{
					"name": "invalid.illegal.wnml",
					"match": "의"
				},
				{
					"name": "invalid.illegal.wnml",
					"match": "적"
				},
				{
					"name": "invalid.illegal.wnml",
					"match": "들"
				},
				{
					"name": "keyword.control.wnml",
					"match": "PC방"
				},
				{
					"name": "keyword.control.wnml",
					"match": "몬헌"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.single.wnml",
					"begin": "'",
					"end": "'"
				},
				{
					"name": "string.quoted.double.wnml",
					"begin": "\"",
					"end": "\""
				},
				{
					"name": "string.quoted.single.wnml",
					"begin": "「",
					"end": "」"
				},
				{
					"name": "string.quoted.double.wnml",
					"begin": "『",
					"end": "』"
				},
				{
					"name": "string.quoted.single.wnml",
					"begin": "〈",
					"end": "〉"
				},
				{
					"name": "string.quoted.double.wnml",
					"begin": "《",
					"end": "》"
				},
				{
					"name": "string.quoted.single.wnml",
					"begin": "〖",
					"end": "〗"
				},
				{
					"name": "string.quoted.double.wnml",
					"begin": "【",
					"end": "】"
				},
				{
					"name": "string.quoted.single.wnml",
					"begin": "\\(",
					"end": "\\)"
				},
				{
					"name": "string.quoted.double.wnml",
					"begin": "\\[",
					"end": "\\]"
				},
				{
					"name": "string.quoted.single.wnml",
					"begin": "<",
					"end": ">"
				},
				{
					"name": "string.quoted.double.wnml",
					"begin": "{",
					"end": "}"
				}
			]
		}
	}
}